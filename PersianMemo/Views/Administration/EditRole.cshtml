@model EditRoleViewModel
@inject LanguageService language

@{
    ViewBag.Title = language.Getkey("editRole");
}

<h1>@ViewBag.Title</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label">@language.Getkey("roleName")</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">@language.Getkey("update")</button>
            <a asp-action="RolesList" class="btn btn-primary">@language.Getkey("cancel")</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>@language.Getkey("usersInThisRole")</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
            foreach (var user in Model.Users)
            {
            <h5 class="card-title">@user</h5>
            }
            }
            else
            {
        <h5 class="card-title">@language.Getkey("noneRightNow")</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary" style="width:auto">@language.Getkey("addRemoveUsersFromRole")</a>
        </div>
    </div>
</form>