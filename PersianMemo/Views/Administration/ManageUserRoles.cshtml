@model List<UserRolesViewModel>
@inject LanguageService language

@{ 
    ViewBag.Title = language.Getkey("manageUserRoles");
    var userId = ViewBag.userId;
}

<div id="manage-userroles-form" class="manage-userroles-body">
    <div class="manage-userroles-holder">
        <form method="post" class="mt-3">
            <div class="card-header text-center">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" class="form-check-input" />
                        <input type="hidden" asp-for="@Model[i].RoleName" class="form-check-input" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                <a asp-action="EditUser" asp-route-roleId="@userId" class="btn btn-primary" style="width:auto">@language.Getkey("cancel")</a>
            </div>
        </form>
    </div>
</div>
