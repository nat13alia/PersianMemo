@model RevisionDetailsViewModel
@inject LanguageService language

@{
    ViewBag.Title = language.Getkey("revision");
    var firstWordId = Model.WordsList.FirstOrDefault().Id;
}


<div class="card-group">
    @foreach (var word in Model.WordsList)
    {
        var photoPath = "~/Images/" + (word.PhotoPath ?? "noimage.png");
        var audioPath = "/audio/" + word.PronunciationPath;

        <div class="card">
            <div class="card-header text-center">
                <h3>@word.PersianWord</h3>
            </div>
            <img class="card-img-top imgThumbnail mx-auto" src="@photoPath" asp-append-version="true" style="display:block" />
        </div>
    }
</div>
<a asp-controller="Revision" asp-action="Revise" asp-route-id="@firstWordId" class="btn btn-primary m-1"><i class="fa-solid fa-graduation-cap"></i></a>
<a asp-controller="home" asp-action="index" class="btn btn-primary">@language.Getkey("back")</a>
