@model LoginViewModel
@inject LanguageService language

@{
    ViewBag.Title = language.Getkey("userLogin");
}

<div id="login-form" class="login-signup-body">
    <div class="login-signup-form">
        <div class="form-wrap">
            <h1>@language.Getkey("login")</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">@language.Getkey("password")</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe">
                            @language.Getkey("rememberMe")
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn">@language.Getkey("login")</button>
            </form>
        </div>
        <footer>
            <p><a asp-controller="account" asp-action="ForgotPassword" class="btn nav-link">@language.Getkey("forgotPassword")</a></p>
        </footer>
    </div>
</div>
