@model RegisterViewModel
@inject LanguageService language

@{
    ViewBag.Title = language.Getkey("userRegistration");
}

<div id="register-form" class="login-signup-body">
    <div class="login-signup-form">
        <div class="form-wrap">
            <h1>@language.Getkey("signUp")</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">@language.Getkey("password")</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">@language.Getkey("confirmPassword")</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit">@language.Getkey("register")</button>
            </form>
        </div>
        <footer>
            <p>@language.Getkey("alreadyHaveAnAccount") <a asp-controller="account" asp-action="login" class="btn nav-link">@language.Getkey("loginHere")</a></p>
        </footer>
    </div>
</div>