@model LearnWriteViewModel
@inject LanguageService language

@{
    ViewBag.Title = language.Getkey("learn");
    var photoPath = "~/images/" + (Model.Words.FirstOrDefault().PhotoPath ?? "noimage.png");
    var audioPath = "/audio/" + (Model.Words.FirstOrDefault().PronunciationPath);
}

<form enctype="multipart/form-data" method="post" class="mt-3">
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Words.FirstOrDefault().Translation</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-body text-center" id="photo" src="@photoPath" asp-append-version="true" />
                    <div class="form-group row">
                        <label asp-for="Answer" class="col-sm-2 col-form-label">@language.Getkey("word") </label>
                        <div class="col-sm-10">
                            <input asp-for="Answer" class="form-control" placeholder="@language.Getkey("typeTheAnswer")" />
                            <span asp-validation-for="Answer" class="text-danger"></span>
                        </div>
                    </div>
                    @if (audioPath != null)
                    {
                        <audio id="audioPlayer" src="@audioPath" type="audio/wav" autoplay></audio>
                    }

                    else
                    {
                        <img class="card-body text-center" width="100" height="100" src="~/Audio/noaudio.png" asp-append-version="true" />
                    }
                </div>
            </div>
        </div>
    </div>
    <input hidden asp-for="CurrentWordId" />
    <input hidden asp-for="CurrentExerciseId" />
    <button type="submit" class="btn btn-primary">@language.Getkey("accept")</button>
</form>

@section Scripts{
    <script type="text/javascript">
        window.onload = function () {
            document.getElementById("audioPlayer").play();
        }
    </script>
}


