@model Word
@inject IWordRepository _wordRepository

@{ ViewBag.Title = "Dodaj Nowe Słówko"; }

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="PersianWord" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PersianWord" class="form-control" placeholder="Wprowadź nowe słówko" />
            <span asp-validation-for="PersianWord" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-1">
        <label asp-for="Translation" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Translation" class="form-control" placeholder="Wprowadź tłumaczenie" />
            <span asp-validation-for="Translation" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row mt-1">
        <label asp-for="Difficulty" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Difficulty" class="form-select mr-sm-12"
                    asp-items="Html.GetEnumSelectList<Difficulty>()">
                <option value="" selected>Wybierz poziom trudności</option>
            </select>
            <span asp-validation-for="Difficulty" class="text-danger"></span>

        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </div>
    </div>
</form>
